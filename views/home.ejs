

<section>
    <h4>POSTS</h4>
    <!-- Checking if a user is signed in-->
    <% if (locals.user) { %>
    <form action="/posts/create" id="new-post-form" method="POST" placeholder="Type Here..">

        <textarea name="content" cols="30" rows="3"></textarea>
        <input type="submit" value="Post">

    </form>

    <%}%>

    <!-- Displaying the posts from the DB -->
    <div id="posts-list-container">

        <ul>

            <% for(post of posts) { %>
                
            <li>
                <p>
                <%= post.content %>
                <br>
                <small>
                    <%= post.user.name%>
                </small>
                </p>
                <!-- Comments -->
                <div class="post-comments">
                    <% if(locals.user) {%>
                        
                        <form action="/comments/create" method="POST">
                            
                            <input type="text" name="content" placeholder="Add Comment">
                            <!-- Next we need to send the ID of the post to which the comment must be added. -->
                            <input type="hidden" name="post" value="<%=post._id %>">
                            <input type="submit" value="Add Comment">

                        </form>
                        
                        
                    <%}%>

                </div>

            </li>    

                
            <%} %>

        </ul>


    </div>


</section>


